<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--   Start Shotgun Turret   -->
  <ThingDef ParentName="3TurretBase">
    <defName>3shot_TurretGun</defName>
    <label>3 Shotguns turret</label>
    <description>Three Shotguns mounted on a turret. May explode when damaged. Its dumb AI brain can't be directly controlled, so beware of friendly fire.</description>
    <uiIconPath>Things/Building/Turret/Turret3shot_MenuIcon</uiIconPath>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Flammability>0.7</Flammability>
      <WorkToBuild>4400</WorkToBuild>
      <Mass>12.5</Mass>
      <Beauty>-20</Beauty>
      <ShootingAccuracyTurret>0.96</ShootingAccuracyTurret>
    </statBases>
    <killedLeavings>
      <Gun_PumpShotgun>2</Gun_PumpShotgun>
      <ComponentIndustrial>2</ComponentIndustrial>
    </killedLeavings>
    <costList>
      <Steel>60</Steel>
      <Gun_PumpShotgun>3</Gun_PumpShotgun>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <building>
      <turretGunDef>3shot_Gun_Turret</turretGunDef>
      <turretBurstCooldownTime>2.7</turretBurstCooldownTime>
    </building>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_3shot_Turret</defName>
    <label>shotgun bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>18</damageAmountBase>
      <stoppingPower>1.5</stoppingPower>
      <speed>70</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseWeaponTurret">
    <defName>3shot_Gun_Turret</defName>
    <label>3 Shotgun turret</label>
    <description>3 shotguns mounted on a turret.</description>
    <graphicData>
      <texPath>Things/Building/Turret/Turret3shot_11_Top</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <destroyOnDrop>true</destroyOnDrop>
    <tradeability>None</tradeability>
    <useHitPoints>false</useHitPoints>
    <statBases>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.87</AccuracyShort>
      <AccuracyMedium>0.77</AccuracyMedium>
      <AccuracyLong>0.64</AccuracyLong>
      <RangedWeapon_Cooldown>1.25</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>6</Mass>
      <Flammability>0</Flammability>
    </statBases>
    <weaponTags>
      <li>3shot_TurretGun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_3shot_Turret</defaultProjectile>
        <warmupTime>0.9</warmupTime>
        <range>15.9</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>2</ticksBetweenBurstShots>
        <soundCast>Shot_Shotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>
  <!--   End Shotgun Turret   -->
</Defs>
