<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--   Start smg Gun Turret   -->
  <ThingDef ParentName="3TurretBase">
    <defName>3smg_TurretGun</defName>
    <label>3 SMGs turret</label>
    <description>Three SMGs mounted on a turret. May explode when damaged. Its dumb AI brain can't be directly controlled, so beware of friendly fire.</description>
    <uiIconPath>Things/Building/Turret/Turret3smg_MenuIcon</uiIconPath>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Flammability>0.7</Flammability>
      <WorkToBuild>4400</WorkToBuild>
      <Mass>12.5</Mass>
      <Beauty>-20</Beauty>
      <ShootingAccuracyTurret>0.96</ShootingAccuracyTurret>
    </statBases>
    <killedLeavings>
      <Gun_HeavySMG>2</Gun_HeavySMG>
      <ComponentIndustrial>2</ComponentIndustrial>
    </killedLeavings>
    <costList>
      <Steel>60</Steel>
      <Gun_HeavySMG>3</Gun_HeavySMG>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <building>
      <turretGunDef>3smg_Gun_Turret</turretGunDef>
      <turretBurstCooldownTime>2.7</turretBurstCooldownTime>
    </building>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_3smg_Turret</defName>
    <label>smggun bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>12</damageAmountBase>
      <speed>48</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseWeaponTurret">
    <defName>3smg_Gun_Turret</defName>
    <label>3 SMGs turret</label>
    <description>3 smg mounted on a turret.</description>
    <graphicData>
      <texPath>Things/Building/Turret/Turret3smg_11_Top</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <destroyOnDrop>true</destroyOnDrop>
    <tradeability>None</tradeability>
    <useHitPoints>false</useHitPoints>
    <statBases>
      <AccuracyTouch>0.85</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.35</AccuracyMedium>
      <AccuracyLong>0.20</AccuracyLong>
      <RangedWeapon_Cooldown>1.65</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>6</Mass>
      <Flammability>0</Flammability>
    </statBases>
    <weaponTags>
      <li>3smg_TurretGun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_3smg_Turret</defaultProjectile>
        <warmupTime>0.9</warmupTime>
        <range>22.9</range>
        <burstShotCount>9</burstShotCount>
        <ticksBetweenBurstShots>3</ticksBetweenBurstShots>
        <soundCast>Shot_HeavySMG</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>
  <!--   End smg Gun Turret   -->
</Defs>
