<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--   Start assault Gun Turret   -->
  <ThingDef ParentName="3TurretBase">
    <defName>3assault_TurretGun</defName>
    <label>3 Assault Rifles turret</label>
    <description>Three assault rifles mounted on a turret. May explode when damaged. Its dumb AI brain can't be directly controlled, so beware of friendly fire.</description>
    <uiIconPath>Things/Building/Turret/Turret3assault_MenuIcon</uiIconPath>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Flammability>0.7</Flammability>
      <WorkToBuild>4400</WorkToBuild>
      <Mass>12.5</Mass>
      <Beauty>-20</Beauty>
      <ShootingAccuracyTurret>0.96</ShootingAccuracyTurret>
    </statBases>
    <killedLeavings>
      <Gun_AssaultRifle>2</Gun_AssaultRifle>
      <ComponentIndustrial>2</ComponentIndustrial>
    </killedLeavings>
    <costList>
      <Steel>60</Steel>
      <Gun_AssaultRifle>3</Gun_AssaultRifle>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <building>
      <turretGunDef>3assault_Gun_Turret</turretGunDef>
      <turretBurstCooldownTime>2.7</turretBurstCooldownTime>
    </building>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_3assault_Turret</defName>
    <label>assaultgun bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>11</damageAmountBase>
      <speed>70</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseWeaponTurret">
    <defName>3assault_Gun_Turret</defName>
    <label>3 Assault Rifles turret</label>
    <description>3 assault rifles mounted on a turret.</description>
    <graphicData>
      <texPath>Things/Building/Turret/Turret3assault_11_Top</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <AccuracyTouch>0.60</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.65</AccuracyMedium>
      <AccuracyLong>0.55</AccuracyLong>
      <RangedWeapon_Cooldown>1.7</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>6</Mass>
      <Flammability>0</Flammability>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_3assault_Turret</defaultProjectile>
        <warmupTime>1.0</warmupTime>
        <range>30.9</range>
        <burstShotCount>9</burstShotCount>
        <ticksBetweenBurstShots>1</ticksBetweenBurstShots>
        <soundCast>Shot_AssaultRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>
  <!--   End assault Gun Turret   -->
</Defs>
