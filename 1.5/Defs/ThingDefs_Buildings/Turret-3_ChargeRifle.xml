<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--   Start Charge rifle Turret   -->
  <ThingDef ParentName="3TurretBase">
    <defName>3CR_TurretGun</defName>
    <label>3 Charge Rifles turret</label>
    <description>Three charge rifles mounted on a turret. May explode when damaged. Its dumb AI brain can't be directly controlled, so beware of friendly fire.</description>
    <uiIconPath>Things/Building/Turret/Turret3CR_MenuIcon</uiIconPath>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Flammability>0.7</Flammability>
      <WorkToBuild>4400</WorkToBuild>
      <Mass>12.5</Mass>
      <Beauty>-20</Beauty>
      <ShootingAccuracyTurret>0.96</ShootingAccuracyTurret>
    </statBases>
    <killedLeavings>
      <Gun_ChargeRifle>2</Gun_ChargeRifle>
      <ComponentIndustrial>2</ComponentIndustrial>
    </killedLeavings>
    <costList>
      <Steel>60</Steel>
      <Gun_ChargeRifle>3</Gun_ChargeRifle>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <building>
      <turretGunDef>3CR_Gun_Turret</turretGunDef>
      <turretBurstCooldownTime>2.7</turretBurstCooldownTime>
    </building>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_3CR_Turret</defName>
    <label>charge rifle turret shot</label>
    <graphicData>
      <texPath>Things/Projectile/Charge_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>15</damageAmountBase>
      <armorPenetrationBase>0.35</armorPenetrationBase>
      <speed>70</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseWeaponTurret">
    <defName>3CR_Gun_Turret</defName>
    <label>3 Charge Rifle turret</label>
    <description>3 charge rifles mounted on a turret.</description>
    <graphicData>
      <texPath>Things/Building/Turret/Turret3CR_11_Top</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_ChargeLance</soundInteract>
    <destroyOnDrop>true</destroyOnDrop>
    <tradeability>None</tradeability>
    <useHitPoints>false</useHitPoints>
    <statBases>
      <AccuracyTouch>0.55</AccuracyTouch>
      <AccuracyShort>0.64</AccuracyShort>
      <AccuracyMedium>0.55</AccuracyMedium>
      <AccuracyLong>0.45</AccuracyLong>
      <RangedWeapon_Cooldown>2.0</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>6</Mass>
      <Flammability>0</Flammability>
    </statBases>
    <weaponTags>
      <li>3CR_TurretGun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_3CR_Turret</defaultProjectile>
        <warmupTime>1.0</warmupTime>
        <range>25.9</range>
        <burstShotCount>9</burstShotCount>
        <ticksBetweenBurstShots>4</ticksBetweenBurstShots>
        <soundCast>Shot_ChargeRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>
  <!--   End Charge rifle Turret   -->
</Defs>
